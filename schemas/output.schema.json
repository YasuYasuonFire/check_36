{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/check36.simple.output.schema.json",
  "title": "Check36 Simple Output",
  "type": "object",
  "required": ["evaluation45", "evaluation80", "references"],
  "properties": {
    "evaluation45": {
      "$ref": "#/definitions/LimitAssessment"
    },
    "evaluation80": {
      "$ref": "#/definitions/LimitAssessment"
    },
    "references": {
      "type": "object",
      "properties": {
        "appliedRules": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": false
    }
  },
  "definitions": {
    "LimitAssessment": {
      "type": "object",
      "required": ["limit", "totalWorkHoursToDate", "projectedTotalWorkHours", "projectedOvertimeHours", "remainingToLimit", "riskLevel", "recoveryOptions"],
      "properties": {
        "limit": { "type": "number" },
        "totalWorkHoursToDate": { "type": "number" },
        "projectedTotalWorkHours": { "type": "number" },
        "projectedOvertimeHours": { "type": "number" },
        "remainingToLimit": { "type": "number" },
        "riskLevel": { "type": "string", "enum": ["OK", "WARN", "LIMIT"] },
        "recoveryOptions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["paidLeaveDays", "maxDailyWorkHours", "description"],
            "properties": {
              "paidLeaveDays": { "type": "integer", "minimum": 0 },
              "maxDailyWorkHours": { "type": "number", "minimum": 0 },
              "description": { "type": "string" }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
